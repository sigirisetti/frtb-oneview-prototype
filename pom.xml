    <groupId>com.uob.frtb</groupId>
    <artifactId>frtb-oneview-prototype</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <modules>
        <module>frtb-common-model</module>
